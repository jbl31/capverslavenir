{% extends 'base.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}

    {% block content %}
        <div class="container content news">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <h1>{{ post.title }}</h1>
                        </div>
                    </div>
                    <span class="badge-light">Posté par Admin le 24/02/2018</span>
                    <hr>
                    <div>{{ post.summary }}</div>
                    <br>
                    <div>{{ post.content | raw }}</div>
                    <a class="btn btn-warning float-left" role="button" href="{{ path('post_show', {'id' : post.id-1}) }}">Article précédent</a>
                    <a class="btn btn-info float-right" role="button" href="{{ path('post_show', {'id' : post.id+1}) }}">Article suivant</a>
                </div>
            </div>
        </div>

    {% endblock %}

