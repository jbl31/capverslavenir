{% extends 'base.html.twig' %}

{#{% block javascripts %}
    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
{% endblock %}#}

    {% block body %}
        {% for post in posts %}
            <div class="wrapper">
            <div class="container news bodynews">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12">
                                <h1>{{ post.title }}</h1>
                            </div>
                        </div>
                        <span class="badge-light">Post√© par Admin {#{{ post.author }}#} le {#{{ post.publishedAt }}#}</span>
                        <hr>
                        <div>{{ post.summary }}</div>
                        <a class="btn btn-info float-right" role="button" href="{{ path('post_show', {'id' : post.id})}}">Lire la suite..</a>
                    </div>
                </div>
            </div>
            </div>

        {% endfor %}
        <div class="navigation justify-content-center">
            {{ knp_pagination_render(posts, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}

        </div>
        <div>Total : {{ posts|length }}</div>
    {% endblock %}

