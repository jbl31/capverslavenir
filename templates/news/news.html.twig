{% extends 'base.html.twig' %}


    {% block body %}
        {% for post in posts %}
            <div class="container news">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12">
                                <h1>{{ post.title }}</h1>
                            </div>
                        </div>
                        <div>{{ post.summary }}</div>
                        <span class="badge-light">Post√© par Admin le 24/02/2018</span>
                        <br>
                        <p>{{ post.content }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div>Total : {{ posts|length }}</div>
    {% endblock %}