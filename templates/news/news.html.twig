    {% block body %}
        {% for post in posts %}
            <div class="container news">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12">
                                <h1>{{ post.title }}</h1>
                            </div>
                        </div>
                        <span class="badge-light">Post√© par Admin le 24/02/2018</span>
                        <hr>
                        <div>{{ post.summary }}</div>
                        <a class="btn btn-info float-right" role="button" href="{{ path('post_show', {'id' : post.id})}}">Lire la suite..</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div>Total : {{ posts|length }}</div>
    {% endblock %}