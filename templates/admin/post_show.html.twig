{% extends 'admin_base.html.twig' %}
{% block body %}
    <div class="section">
        <a href="{{ path('admin_post_edit', {id: post.id}) }}" class="btn btn-md btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i>
        </a>
        <a href="{{ path('admin_post_delete', {id: post.id}) }}" class="btn btn-md btn-block btn-danger">
            <i class="fa fa-trash" aria-hidden="true"></i>
        </a>
    </div>


        <div class="container news">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <h1>{{ post.title }}</h1>
                        </div>
                    </div>
                    <span class="badge-light">Posté par Admin le 24/02/2018</span>
                    <hr>
                    <div>{{ post.summary }}</div>
                    <br>
                    <div>{{ post.content }}</div>
                    <a class="btn btn-warning float-left" role="button" href="{{ path('admin_post_show', {'id' : post.id-1}) }}">Article précédent</a>
                    <a class="btn btn-info float-right" role="button" href="{{ path('admin_post_show', {'id' : post.id+1}) }}">Article suivant</a>
                </div>
            </div>
        </div>

{% endblock %}